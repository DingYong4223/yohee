<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="alertDialogTheme">@style/AlertDialog.AppCompat</item>

        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>
    <style name="AppTheme" parent="@style/AppThemeBase">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Activity.Base" parent="@style/AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Alert dialogs -->
        <item name="alertDialogTheme">@style/Theme.Activity.Default</item>
    </style>

    <!-- Regular themes : Theme.AppCompat.NoActionBar-->
    <style name="Theme.Activity.Default" parent="Theme.Activity.Base">
        <item name="colorPrimaryTrans">@color/defcolorPrimaryTrns</item>
        <item name="colorPrimaryDarkTrans">@color/defcolorPrimaryDarkTrns</item>
        <item name="colorPrimary">@color/defcolorPrimary</item>
        <item name="textColorPrimary">@color/deftextColorPrimary</item>
        <item name="textColorHint">@color/deftextColorHint</item>
        <item name="colorPrimaryDark">@color/defcolorPrimaryDark</item>
        <item name="colorAccent">@color/defcolorAccent</item>
        <item name="drawerBackground">@color/defcolorPrimaryDark</item>
        <item name="dividerColor">@color/defcolorPrimaryDark</item>
        <item name="progressBackgroundColor">@color/defcolorPrimaryDark</item>
        <item name="textColorWhite">@color/deftextColorWhite</item>
        <item name="layoutBgDark">@color/deflayoutBgDark</item>
        <item name="layoutBgLightDark">@color/deflayoutBgLightDark</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="SheetAnimation">
        <item name="android:windowEnterAnimation">@anim/actionsheet_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_out</item>
    </style>

    <style name="ScaleAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_scale</item>
        <item name="android:windowExitAnimation">@anim/fade_out_scale</item>
    </style>

    <style name="YoheeDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/defcolorAccent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.2</item>
        <!--<item name="android:background">@color/defcolorPrimaryDarkTrns</item>-->
        <item name="colorPrimary">@color/defcolorPrimary</item>
        <item name="textColorPrimary">@color/deftextColorPrimary</item>
        <item name="textColorHint">@color/deftextColorHint</item>
        <item name="colorPrimaryDark">@color/defcolorPrimaryDark</item>
    </style>

    <style name="SheetDialogStyle" parent="@style/YoheeDialogStyle">
        <item name="android:windowAnimationStyle">@style/SheetAnimation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AlertDialogStyle" parent="@style/YoheeDialogStyle">
        <item name="android:windowAnimationStyle">@style/ScaleAnimation</item>
    </style>

    <style name="dialogSoftInput" parent="@style/YoheeDialogStyle">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">#FFB805</item>
        <item name="fab_colorPressed">#F2AB00</item>
        <item name="fab_colorRipple">#D99200</item>
    </style>

</resources>