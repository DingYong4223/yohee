<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:background="@drawable/trans_list_item_style">

    <ImageView
        android:id="@+id/logo_img"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:layout_width="@dimen/setting_item_height"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_toRightOf="@+id/logo_img"
        android:id="@+id/item_key"
        android:layout_width="wrap_content"
        android:minWidth="110dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:text="item属性键"/>

    <RadioButton
        android:clickable="false"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:drawableEnd="@drawable/setting_item_select"
        android:id="@+id/item_radio"
        android:padding="10dp"
        android:layout_width="@dimen/setting_item_height"
        android:layout_height="match_parent"
        android:button="@null"
        android:gravity="center"/>

</RelativeLayout>