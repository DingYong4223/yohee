<?xml version="1.0" encoding="utf-8"?>
<com.fula.view.BottomDrawer
    android:id="@+id/bottomDrawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/main_bottom_drawer"/>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ui_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimaryTrans"
                android:fitsSystemWindows="true"
                android:orientation="vertical">
                <include layout="@layout/toolbar"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:clipToPadding="false"
                android:clipChildren="true">
                <View
                    android:id="@+id/status_keep"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <com.fula.view.progress.WebProgressBar
                    android:id="@+id/progress_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_progress_height"
                    android:background="?attr/progressBackgroundColor"
                    app:bidirectionalAnimate="false"
                    app:progressColor="@color/loading_color"/>
                <include
                    layout="@layout/layout_logic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <include
                android:id="@+id/bottom_tool_bar"
                layout="@layout/main_bottombar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:layout_gravity="bottom"
                android:elevation="2dp"/>
        </LinearLayout>

        <include
            android:id="@+id/side_drawer"
            layout="@layout/tabview_layout"
            android:layout_width="@dimen/navigation_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"/>
    </androidx.drawerlayout.widget.DrawerLayout>

</com.fula.view.BottomDrawer>