<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/losttabs_tip_height"
    android:background="@color/default_orange"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/yellow_content"
        android:paddingLeft="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="1.0"/>
    <TextView
        android:id="@+id/yellow_action"
        android:layout_width="@dimen/losttabs_opentxt_width"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/lt_close"
        android:padding="8dp"
        android:layout_width="@dimen/losttabs_tip_height"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_wrong"/>
</LinearLayout>

